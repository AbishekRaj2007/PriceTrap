{
  "manifest_version": 2,
  "name": "PriceTrap Detector",
  "version": "1.0",
  "permissions": [
    "<all_urls>",
    "http://127.0.0.1/*",
    "http://localhost/*"
  ],
  "content_scripts": [
    {
      "matches": ["*://www.amazon.in/*"],
      "js": ["content.js"],
      "run_at": "document_idle",
      "all_frames": true
    }
  ]
}
